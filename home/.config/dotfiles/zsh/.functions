#######################################
# Peep on the weather.
#
# Arguments:
#   location(s) - defaults to HOU, MEL
# Example:
#   `wxr austin san+francisco`
#   `wxr KSEA YSSY`
#######################################
wxr() {
  local loc

  if [[ ${#@} < 1 ]]; then
    loc="Melbourne,Houston,Seattle"
  else
    loc="$(echo ${@} | tr ' ' ',')"
  fi

  local url="https://wttr.in/{${loc}}?format=%l:+%c+%20%C+%20%w+%20[%t]\n"
  # local url="https://wttr.in/{${loc}}?format=3"

  curl -s "${url}"
}
